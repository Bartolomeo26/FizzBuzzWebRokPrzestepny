@page
@model IndexModel
@{
    ViewData["Title"] = "Rok przestępny";
}

<div>
    <form method="post">
        <div class="form-group">
            <label asp-for="FizzBuzz.Rok"></label>
            <input asp-for="FizzBuzz.Rok" class="form-control" value="" min="1899" max="2022" />
            <span asp-validation-for="FizzBuzz.Rok" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FizzBuzz.Imie"></label>
            <input asp-for="FizzBuzz.Imie" class="form-control" maxlength="100" value="" />
            <span asp-validation-for="FizzBuzz.Imie" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Zatwierdź</button>
    </form>
</div>

@if (ViewData["message"] != null)
{
    <div class="mt-3">
        <p>@ViewData["message"]</p>
    </div>
}